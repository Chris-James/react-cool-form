{
  "name": "react-cool-form-examples",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "link-pkg": "yarn link \"react-cool-form\"",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check --watch",
    "lint": "run-p lint:*",
    "lint:code": "eslint --fix . --ext .js,.ts,.tsx",
    "lint:style": "stylelint --fix \"**/*.{css,ts,tsx}\"",
    "test": "react-scripts test --passWithNoTests",
    "test:cov": "yarn test --coverage --watchAll=false",
    "clean": "run-p clean:*",
    "clean:build": "rimraf build",
    "clean:cov": "rimraf coverage",
    "eject": "react-scripts eject"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test --watchAll=false"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --fix",
    "*.{css,ts,tsx}": "stylelint --fix",
    "*.{json,md,yml}": "prettier --write"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "welly"
    ],
    "rules": {
      "jsx-a11y/label-has-associated-control": "off",
      "@typescript-eslint/no-shadow": "off",
      "@typescript-eslint/no-use-before-define": "off",
      "@typescript-eslint/ban-ts-ignore": "off"
    },
    "globals": {
      "JSX": true
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "stylelint": {
    "plugins": [
      "stylelint-prettier"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": true
    },
    "ignoreFiles": [
      "build/**/*.css",
      "coverage/**/*.css"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@emotion/core": "^10.0.35",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@testing-library/user-event": "^12.1.5",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.1",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "normalize.css": "^8.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.3",
    "typescript": "~4.0.2"
  },
  "devDependencies": {
    "eslint-config-welly": "^1.4.6",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "stylelint": "^13.7.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-prettier": "^1.1.2"
  }
}
