{
  "name": "react-cool-form-examples",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "link-pkg": "yarn link 'react-cool-form'",
    "start:dev": "react-scripts start",
    "start:prod": "yarn build && serve -s build",
    "build": "react-scripts build",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check --watch",
    "lint": "run-s lint:*",
    "lint:code": "eslint --fix . --ext .js,.ts,.tsx",
    "lint:style": "stylelint --fix \"**/*.{css,ts,tsx}\"",
    "lint:format": "prettier -w . -u --loglevel silent",
    "test": "react-scripts test --passWithNoTests",
    "test:cov": "yarn test --coverage --watchAll=false",
    "clean": "run-p clean:*",
    "clean:build": "rimraf build",
    "clean:cov": "rimraf coverage",
    "eject": "react-scripts eject"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test --watchAll=false"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --fix",
    "*.{css,ts,tsx}": "stylelint --fix",
    "**/*": "prettier -w -u"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "welly"
    ],
    "rules": {
      "@typescript-eslint/no-use-before-define": "off",
      "@typescript-eslint/ban-ts-ignore": "off"
    },
    "globals": {
      "JSX": true
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "ignoreFiles": [
      "build/**/*.css",
      "coverage/**/*.css"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@emotion/core": "^10.0.35",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.8",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.10",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "normalize.css": "^8.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.3",
    "typescript": "~4.0.3"
  },
  "devDependencies": {
    "eslint-config-welly": "^1.6.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "serve": "^11.3.2",
    "stylelint": "^13.7.2",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0"
  }
}
